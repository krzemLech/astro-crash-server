---
type Props = {
  category: string;
};

const { category } = Astro.props;
---

<a
  href={`/category/${category}`}
  class="text-teal-900 rounded-3xl uppercase text-xl border-2 border-teal-900 whitespace-nowrap px-4 py-2 hover:bg-teal-900 hover:text-white transition-colors duration-300 ease-in-out cursor-pointer"
  >{category}</a
>
