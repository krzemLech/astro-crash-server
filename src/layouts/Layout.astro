---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource/cabin";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title = "Rhythm Nation",
  description = "A community of music producers and enthusiasts",
  image = "/images/drums.png",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/heartbeat.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:image:alt" content={description} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:creator" content="@rhythm_nation" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:image:alt" content={description} />
  </head>
  <body class="min-h-screen grid grid-rows-[auto,1fr,auto]">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  main {
    display: block;
  }
</style>
